%script
  $(function(){
  ="var data = '#{@category_list}'.split(',');"
  $("#product_category").autocomplete(data);

  if($('#product_description').val().length > 0){
  $('#has_description').attr('checked',true);}
  else{
  $("#desc_li").hide();}

  $("#has_description").click(function(){
  if($("#has_description").is(":checked"))
  {
  $("#desc_li").slideDown();
  }
  else
  {
  $("#desc_li").slideUp();
  }
  });
  })
  
%h1="#{controller.action_name.capitalize} Product"
=form_for @product do |p|
  -@product.errors.full_messages.each do |e|
    %p.error=e
  %fieldset
    %ul
      %li
        =p.label :name
        =p.text_field :name
      %li
        =p.label :category
        =p.text_field :category
