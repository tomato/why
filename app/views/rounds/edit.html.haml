%h1="#{controller.action_name.capitalize} Round"
=form_for @round do |r|
  .pairs
    %p.clear
      .left=r.label :name
      .right=r.text_field :name
    %p.clear
      .left=r.label :area
      .right=r.text_area :area, :rows => 3
    %p.clear
      .left=r.label :schedule
      .right=r.text_area :schedule, :rows => 3
    %p.clear
      .left=r.label :customer_message
      .right=r.text_area :customer_message, :rows => 3
    %p.clear
      .left
      .right=submit_tag
