%script
  $(function(){
  ="var data = '#{@category_list}'.split(',');"
  $("#product_category").autocomplete(data);

  if($('#product_description').val().length > 0){
  $('#has_description').attr('checked',true);}
  else{
  $("#desc_li").hide();}

  $("#has_description").click(function(){
  if($("#has_description").is(":checked"))
  {
  $("#desc_li").slideDown();
  }
  else
  {
  $("#desc_li").slideUp();
  }
  });
  })
  
#help
  %h2 Help
  %ul
    %li Give your product a name
    %li Enter a new category or type the first letter of a category that already exists and it will appear for you to select
    %li Add a price
