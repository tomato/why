=content_for :head do
  :javascript
    $(function(){
      why.setupProducts();
      why.setupOrders();
      $('#watch').live('click', function(){ $('#movie').slideDown();})
      $('#hide').click(function(){ $('#movie').slideUp(); });
      $('.more').hover(
        function(){ $(this).next('.description').fadeIn(); },
        function(){ $(this).next('.description').fadeOut(); }
      );
    })

#movie
  %a#hide Hide help
  =image_tag 'helpscreenshot.jpg'
#products
  %h2 Products
  -@product_categories.each do |category, products| 
    %h3
      %span.catselector +
      =category
    %ul
      -products.each do |product|
        %li.product{"data-product_id" => product.id}
          %span.prodname
            =product.name
            -if(product.price)
              %span.price{ 'data-price' => product.price }= to_pound(product.price)
          -if product.description.present?
            %span.more ?
            .description=raw product.description
#deliveries
  = render 'deliveries'
