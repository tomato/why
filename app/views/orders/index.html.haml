=content_for :head do
  :javascript
    $(function(){
      why.setupProducts();
      why.setupOrders();
      $('#submit').click(function(){ why.createOrder(); return false; })
      $('#watch').toggle(
        function(){ $('#movie').slideDown(); $(this).html('Hide the video'); },
        function(){ $('#movie').slideUp();  $(this).html('Show the video');})
    })

%p#instructions
  Change your orders by dragging products into your orders or into the bin then click 
  %a#submit Update Your Order
  Still flumoxed?
  %a#watch Watch the video

  #movie
    %object
      %param{ :name=>"movie", :value=>"http://www.youtube.com/v/BWd54GtnfDk&hl=en_US&fs=1&rel=0&hd=1", :width=>"640", :height=>"505"}
      %embed{ :src=>"http://www.youtube.com/v/BWd54GtnfDk&hl=en_US&fs=1&rel=0&hd=1", :type=>"application/x-shockwave-flash", :width=>"640", :height=>"505" }
        
#products
  %h2 Products
  -@product_categories.each do |category, products| 
    %h3=category
    %ul
      -products.each do |product|
        %li.product{"data-product_id" => product.id}=product.name
#deliveries
  %ul.regularOrders
    -@regular_orders.each do |regular|
      %li
        .order
          %h3{"data-regular_order_id" => regular.id} Regular Order
          %ul
            -regular.regular_order_items.each do |oi|
              %li{"data-product_id" => oi.product_id} 
                %input.quantity{ :value => oi.quantity }
                %span.product=oi.product.name
    %li
      #bin 
        %h3 Bin it
        =image_tag 'bin_empty.png', {:alt => 'bin' }
  %hr
  %ul.orders
    -@orders.each do |order|
      %li
        %div{:class => order.new_record? ? "order regular" : "order"}  
          %h3{"data-delivery_id" => order.delivery.id}=order.delivery.date.to_s(:short)
          %ul
            -order.order_items.each do |oi|
              %li{"data-product_id" => oi.product_id} 
                %input.quantity{ :value => oi.quantity }
                %span.product=oi.product.name

